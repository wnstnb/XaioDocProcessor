{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start Backend",
        "type": "shell",
        "command": "cd backend && .venv310\\Scripts\\activate.bat && python -m uvicorn main:app --reload --port 8000",
        "isBackground": true,
        "problemMatcher": []
      },
      {
        "label": "Start Frontend",
        "type": "shell",
        "command": "cd frontend && npm run dev",
        "isBackground": true,
        "problemMatcher": []
      },
      {
        "label": "Start All",
        "dependsOn": ["Start Backend", "Start Frontend"],
        "runOptions": {
          "runOn": "folderOpen"
        },
        "problemMatcher": []
      }
    ]
  }
  